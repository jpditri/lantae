#!/usr/bin/env bash
# Lantae CLI wrapper script

# Get the directory where this script is located
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# Change to the Lantae directory
cd "$SCRIPT_DIR" || exit 1

# Run lantae with bundle exec to ensure all gems are available
exec bundle exec ruby "$SCRIPT_DIR/bin/lantae" "$@"