# Execute tasks
def execute_task(task)
  puts "\nðŸ”§ #{task[:name]}"
  puts "-" * 50
  
  if task[:commands]
    task[:commands].each do |cmd|
      puts "  â†’ #{cmd}"
      result = system(cmd)
      unless result
        puts "  âŒ Command failed!"
        return false
      end
    end
    puts "  âœ… Commands executed successfully"
  elsif task[:file]
    puts "  â†’ Creating #{task[:file]}"
    FileUtils.mkdir_p(File.dirname(task[:file]))
    File.write(task[:file], task[:content])
    puts "  âœ… File created"
  end
  
  true
end

# Main execution
puts "ðŸš€ Implementing D&D Procedural Generation System"
puts "=" * 60

results = []
TASKS.each do |task|
  success = execute_task(task)
  results << { task: task[:name], success: success }
  
  unless success
    puts "\nâŒ Task failed, stopping execution"
    break
  end
end

# Summary
puts "\n" + "=" * 60
puts "ðŸ“Š IMPLEMENTATION SUMMARY"
puts "=" * 60

results.each do |result|
  status = result[:success] ? "âœ…" : "âŒ"
  puts "#{status} #{result[:task]}"
end

overall_success = results.all? { |r| r[:success] }
puts "\n#{overall_success ? 'âœ…' : 'âŒ'} Overall Status: #{overall_success ? 'SUCCESS' : 'FAILED'}"

if overall_success
  puts "\nðŸ“ Next Steps:"
  puts "1. cd ../dnd-lantae"
  puts "2. Add to Gemfile: gem 'rspec' (if not present)"
  puts "3. Run: bundle install"
  puts "4. Run: bundle exec rspec spec/procedural/"
  puts "5. Create bin/npc-generator-procedural using these components"
end